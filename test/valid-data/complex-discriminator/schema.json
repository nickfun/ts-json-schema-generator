{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/MaxAnimal",
  "definitions": {
    "MaxAnimal": {
      "discriminator": {
        "propertyName": "animal_type"
      },
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "age": {
              "type": "number"
            },
            "happyness": {
              "type": "number"
            },
            "animal_type": {
              "type": "string",
              "const": "bird"
            },
            "can_fly": {
              "type": "boolean"
            }
          },
          "required": [
            "age",
            "animal_type",
            "can_fly",
            "happyness",
            "name"
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "age": {
              "type": "number"
            },
            "happyness": {
              "type": "number"
            },
            "animal_type": {
              "type": "string",
              "const": "fish"
            },
            "found_in": {
              "type": "string",
              "enum": [
                "ocean",
                "river"
              ]
            }
          },
          "required": [
            "age",
            "animal_type",
            "found_in",
            "happyness",
            "name"
          ]
        }
      ]
    }
  }
}

